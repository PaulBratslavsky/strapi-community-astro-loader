{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["astro/client"],
    "paths": {
      "astro/loaders": ["node_modules/astro/dist/content/loaders/index.d.ts"]
    }
  },
  "include": ["src/**/*", "utils/**/*"],
  "exclude": ["node_modules", "dist"]
}
